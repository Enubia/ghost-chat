{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "dependencyDashboard": true,
    "pinVersions": true,
    "packageRules": [
        {
            "description": "Ignore Node.js version specified in package.json",
            "matchDepTypes": [
                "engines",
                "packageManager"
            ],
            "enabled": false
        }
    ],
    "schedule": [
        "on the first day of the month"
    ]
}
