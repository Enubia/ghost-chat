{
    "extends": [
        "config:base",
        "helpers:pinGitHubActionDigests"
    ],
    "dependencyDashboard": true,
    "packageRules": [
        {
            "description": "Disable Node.js updates",
            "matchPackageNames": [
                "node"
            ],
            "matchManagers": [
                "pnpm"
            ],
            "matchDepTypes": [
                "engines"
            ],
            "enabled": false
        }
    ],
    "pinVersions": true,
    "schedule": [
        "every weekend"
    ]
}
