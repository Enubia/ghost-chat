{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "paths": {
            "@shared/*": [
                "./shared/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@lib/*": [
                "./src/lib/*"
            ]
        },
        "resolveJsonModule": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
