{
    "compilerOptions": {
        "target": "ESNext",
        "paths": {
            "#shared/*": [
                "./shared/*"
            ],
            "#components/*": [
                "./renderer/src/components/*"
            ],
            "#lib/*": [
                "./renderer/src/lib/*"
            ],
            "#layouts/*": [
                "./renderer/src/layouts/*"
            ]
        },
        "resolveJsonModule": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
