{
    "name": "ghost-chat",
    "version": "2.6.1",
    "private": true,
    "description": "Standalone twitch chat overlay",
    "author": {
        "name": "Marco Schuster",
        "email": "dev.enubia@mailbox.org"
    },
    "license": "Zlib",
    "homepage": "https://github.com/Enubia/ghost-chat#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Enubia/ghost-chat.git"
    },
    "bugs": {
        "url": "https://github.com/Enubia/ghost-chat/issues"
    },
    "keywords": [
        "electron",
        "typescript",
        "vue",
        "twitch",
        "transparent-overlay",
        "streaming",
        "live-stream"
    ],
    "main": "dist-electron/main/background.js",
    "debug": {
        "env": {
            "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
        }
    },
    "engines": {
        "node": "20.11.0",
        "pnpm": "8.15.1"
    },
    "scripts": {
        "build-production": "vue-tsc --noEmit && vite build && electron-builder",
        "build": "vue-tsc --noEmit && vite build",
        "clean": "rimraf dist-electron dist release node_modules",
        "dev": "vite",
        "generate-changelog": "auto-changelog -p -l false -t ./changelog-template.hbs --ignore-commit-pattern \"chore\\(deps\\)|chore: release|Enubia/renovate\" --starting-version v2.0.0",
        "lint:electron": "eslint electron/",
        "lint:shared": "eslint shared/",
        "lint:src": "eslint src/",
        "lint": "pnpm run lint:src && pnpm run lint:shared && pnpm run lint:electron",
        "prepare": "husky",
        "preview": "vite preview",
        "publish": "release-it"
    },
    "devDependencies": {
        "@antfu/eslint-config": "2.6.4",
        "@codemirror/lang-css": "6.2.1",
        "@codemirror/lang-javascript": "6.2.1",
        "@codemirror/theme-one-dark": "6.1.2",
        "@fortawesome/fontawesome-svg-core": "6.5.1",
        "@fortawesome/free-brands-svg-icons": "6.5.1",
        "@fortawesome/free-regular-svg-icons": "6.5.1",
        "@fortawesome/free-solid-svg-icons": "6.5.1",
        "@fortawesome/vue-fontawesome": "3.0.6",
        "@intlify/unplugin-vue-i18n": "2.0.0",
        "@picocss/pico": "1.5.11",
        "@vitejs/plugin-vue": "5.0.4",
        "auto-changelog": "2.4.0",
        "codemirror": "6.0.1",
        "electron": "28.2.2",
        "electron-builder": "24.9.1",
        "electron-context-menu": "3.6.1",
        "electron-log": "5.1.1",
        "electron-store": "8.1.0",
        "electron-updater": "6.1.7",
        "eslint-plugin-format": "0.1.0",
        "husky": "9.0.10",
        "lint-staged": "15.2.2",
        "markdown-it": "14.0.0",
        "release-it": "17.0.3",
        "rimraf": "5.0.5",
        "sass": "1.70.0",
        "tree-kill": "1.2.2",
        "typescript": "5.3.3",
        "vite": "5.1.1",
        "vite-plugin-electron": "0.28.2",
        "vite-plugin-electron-renderer": "0.14.5",
        "vue": "3.4.18",
        "vue-codemirror": "6.1.1",
        "vue-i18n": "9.9.1",
        "vue-tsc": "1.8.27"
    },
    "lint-staged": {
        "*": "eslint"
    }
}
