{
	"name": "ghost-chat",
	"version": "2.0.0-beta",
	"private": true,
	"description": "Standalone twitch chat overlay",
	"author": {
		"name": "Marco Schuster"
	},
	"main": "dist-electron/main/background.js",
	"license": "MIT",
	"keywords": [
		"electron",
		"typescript",
		"vue",
		"twitch",
		"transparent-overlay",
		"streaming",
		"live-stream"
	],
	"debug": {
		"env": {
			"VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
		}
	},
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"release": "vue-tsc --noEmit && vite build && electron-builder",
		"publish": "release-it",
		"clean": "rimraf dist-electron dist release",
		"lint:src": "eslint --cache --ext .ts --ignore-path .eslintignore src/",
		"lint:electron": "eslint --cache --ext .ts --ignore-path .eslintignore electron/",
		"lint": "pnpm run lint:src && pnpm run lint:electron",
		"prepare": "test -d node_modules/husky && husky install"
	},
	"devDependencies": {
		"@codemirror/lang-css": "6.0.2",
		"@codemirror/lang-javascript": "6.1.4",
		"@codemirror/theme-one-dark": "6.1.1",
		"@fortawesome/fontawesome-svg-core": "6.3.0",
		"@fortawesome/free-brands-svg-icons": "6.3.0",
		"@fortawesome/free-regular-svg-icons": "6.3.0",
		"@fortawesome/free-solid-svg-icons": "6.3.0",
		"@fortawesome/vue-fontawesome": "3.0.3",
		"@picocss/pico": "1.5.7",
		"@typescript-eslint/eslint-plugin": "5.54.0",
		"@typescript-eslint/parser": "5.54.0",
		"@vitejs/plugin-vue": "4.0.0",
		"codemirror": "6.0.1",
		"electron": "23.1.2",
		"electron-builder": "23.6.0",
		"electron-context-menu": "3.6.1",
		"electron-store": "8.1.0",
		"eslint": "8.35.0",
		"eslint-config-prettier": "8.6.0",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-unicorn": "46.0.0",
		"eslint-plugin-unused-imports": "2.0.0",
		"eslint-plugin-vue": "9.9.0",
		"husky": "8.0.3",
		"lint-staged": "13.1.2",
		"prettier": "2.8.4",
		"release-it": "15.7.0",
		"rimraf": "4.3.0",
		"sass": "1.58.3",
		"typescript": "4.9.5",
		"vite": "4.1.4",
		"vite-plugin-electron": "0.11.1",
		"vite-plugin-electron-renderer": "0.12.1",
		"vue": "3.2.47",
		"vue-codemirror": "6.1.1",
		"vue-tsc": "1.2.0"
	},
	"bugs": {
		"url": "https://github.com/Enubia/ghost-chat/issues"
	},
	"homepage": "https://github.com/Enubia/ghost-chat#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Enubia/ghost-chat.git"
	},
	"engines": {
		"node": "18"
	},
	"lint-staged": {
		"src/**/*.ts": "eslint",
		"electron/**/*.ts": "eslint"
	}
}
