{
	"name": "ghost-chat",
	"version": "2.2.1",
	"private": true,
	"description": "Standalone twitch chat overlay",
	"author": {
		"name": "Marco Schuster"
	},
	"main": "dist-electron/main/background.js",
	"license": "MIT",
	"keywords": [
		"electron",
		"typescript",
		"vue",
		"twitch",
		"transparent-overlay",
		"streaming",
		"live-stream"
	],
	"debug": {
		"env": {
			"VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
		}
	},
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"release": "vue-tsc --noEmit && vite build && electron-builder",
		"publish": "release-it",
		"clean": "rimraf dist-electron dist release",
		"lint:src": "eslint --cache --ext .ts --ignore-path .eslintignore src/",
		"lint:shared": "eslint --cache --ext .ts --ignore-path .eslintignore shared/",
		"lint:electron": "eslint --cache --ext .ts --ignore-path .eslintignore electron/",
		"lint": "pnpm run lint:src && pnpm run lint:shared && pnpm run lint:electron",
		"prepare": "test -d node_modules/husky && husky install"
	},
	"devDependencies": {
		"@codemirror/lang-css": "6.2.0",
		"@codemirror/lang-javascript": "6.1.8",
		"@codemirror/theme-one-dark": "6.1.2",
		"@fortawesome/fontawesome-svg-core": "6.4.0",
		"@fortawesome/free-brands-svg-icons": "6.4.0",
		"@fortawesome/free-regular-svg-icons": "6.4.0",
		"@fortawesome/free-solid-svg-icons": "6.4.0",
		"@fortawesome/vue-fontawesome": "3.0.3",
		"@intlify/unplugin-vue-i18n": "0.10.0",
		"@picocss/pico": "1.5.10",
		"@typescript-eslint/eslint-plugin": "5.59.6",
		"@typescript-eslint/parser": "5.59.6",
		"@vitejs/plugin-vue": "4.2.3",
		"codemirror": "6.0.1",
		"electron": "24.3.1",
		"electron-builder": "23.6.0",
		"electron-context-menu": "3.6.1",
		"electron-log": "4.4.8",
		"electron-store": "8.1.0",
		"electron-updater": "5.3.0",
		"eslint": "8.41.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-unicorn": "47.0.0",
		"eslint-plugin-unused-imports": "2.0.0",
		"eslint-plugin-vue": "9.12.0",
		"husky": "8.0.3",
		"lint-staged": "13.2.2",
		"prettier": "2.8.8",
		"release-it": "15.10.3",
		"rimraf": "5.0.1",
		"sass": "1.62.1",
		"typescript": "5.0.4",
		"vite": "4.3.8",
		"vite-plugin-electron": "0.11.2",
		"vite-plugin-electron-renderer": "0.14.2",
		"vue": "3.3.4",
		"vue-codemirror": "6.1.1",
		"vue-i18n": "9.2.2",
		"vue-tsc": "1.6.5"
	},
	"bugs": {
		"url": "https://github.com/Enubia/ghost-chat/issues"
	},
	"homepage": "https://github.com/Enubia/ghost-chat#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Enubia/ghost-chat.git"
	},
	"engines": {
		"node": ">=18"
	},
	"lint-staged": {
		"src/**/*.ts": "eslint",
		"electron/**/*.ts": "eslint"
	}
}
