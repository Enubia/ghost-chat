{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true,
		"checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "removeComments": false,
    "composite": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": false,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.js",
    "*.ts",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "dist_electron"
  ]
}
