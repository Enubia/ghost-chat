{
    "name": "ghost-chat",
    "type": "module",
    "version": "3.6.1",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Enubia/ghost-chat.git"
    },
    "main": "out/dist-electron/main/background.js",
    "debug": {
        "env": {
            "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
        }
    },
    "scripts": {
        "build:vue": "vite build",
        "build:electron": "electron-builder --config ./configs/electron-builder.config.cjs --publish never",
        "build": "pnpm build:vue && pnpm build:electron",
        "build:release": "pnpm build:vue && electron-builder --config ./configs/electron-builder.config.cjs",
        "changelog:generate-vue": "auto-changelog --handlebars-setup ./configs/handlebars-setup.cjs -p -l false -t ./configs/changelog-template-vue.hbs --ignore-commit-pattern \"chore\\(deps\\)|chore: release|Enubia/renovate\" --starting-version v2.0.0 --output ./renderer/components/changelog/Generated.vue && eslint --fix ./renderer/components/changelog/Generated.vue",
        "changelog:generate": "auto-changelog -p -l false -t ./configs/changelog-template.hbs --ignore-commit-pattern \"chore\\(deps\\)|chore: release|Enubia/renovate\" --starting-version v2.0.0",
        "changelog:push": "git add . && git commit -m \"chore: update changelog\" && git push",
        "changelog:update": "pnpm changelog:generate && pnpm changelog:generate-vue && pnpm changelog:push",
        "clean": "rimraf out node_modules",
        "dev": "vite",
        "lint:electron": "eslint electron",
        "lint:ipc": "eslint ipc",
        "lint:renderer": "eslint renderer",
        "lint:ox": "oxlint",
        "lint": "pnpm lint:ox && pnpm lint:renderer && pnpm lint:ipc && pnpm lint:electron",
        "release": "pnpm changelog:update && release-it --config ./configs/release-it.json",
        "typecheck": "vue-tsc --noEmit && tsc --noEmit -p ./electron/tsconfig.json",
        "unused": "pnpm dlx vue-i18n-extract report --vueFiles './renderer/**/*.?(ts|vue)' --languageFiles './renderer/i18n/locales/* .?(json|yml|yaml)'"
    },
    "dependencies": {
        "@iconify/vue": "5.0.0",
        "@radix-icons/vue": "1.0.0",
        "@vueuse/core": "13.3.0",
        "@vueuse/electron": "13.3.0",
        "class-variance-authority": "0.7.1",
        "clsx": "2.1.1",
        "electron-log": "5.4.0",
        "electron-store": "10.0.1",
        "electron-updater": "6.6.2",
        "highlight.js": "11.8.0",
        "radix-vue": "1.9.17",
        "simple-code-editor": "2.0.9",
        "tailwind-merge": "2.6.0",
        "vue": "3.5.16",
        "vue-i18n": "11.1.5",
        "vue-router": "4.5.1"
    },
    "devDependencies": {
        "@antfu/eslint-config": "4.13.2",
        "@eslint/eslintrc": "3.3.1",
        "@iconify/json": "2.2.342",
        "@intlify/unplugin-vue-i18n": "6.0.8",
        "@tomjs/vite-plugin-iconify": "1.2.1",
        "@vitejs/plugin-vue": "5.2.4",
        "auto-changelog": "2.5.0",
        "autoprefixer": "10.4.21",
        "electron": "35.5.0",
        "electron-builder": "26.0.12",
        "eslint": "9.27.0",
        "eslint-plugin-format": "1.0.1",
        "eslint-plugin-oxlint": "^0.17.0",
        "eslint-plugin-tailwindcss": "3.18.0",
        "oxlint": "^0.17.0",
        "release-it": "19.0.2",
        "rimraf": "6.0.1",
        "tailwindcss": "3.4.17",
        "tailwindcss-animate": "1.0.7",
        "typescript": "5.8.3",
        "unplugin-vue-router": "0.12.0",
        "vite": "6.3.5",
        "vite-plugin-electron": "0.29.0",
        "vite-plugin-electron-renderer": "0.14.6",
        "vue-tsc": "2.2.10"
    },
    "overrides": {
        "simple-code-editor": {
            "highlight.js": "$highlight.js"
        }
    }
}
